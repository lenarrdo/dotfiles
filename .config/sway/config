#     /,`.-'`'    -.  ;-;;,_
#    |,4-  ) )-,_. ,\ (  `'-'
#   '---''(_/--'  `-'\_)
#
# Sway config file

###########
# general #
###########

# monitor settings
output eDP-1 mode 2880x1800@90.001Hz scale 2

# night mode
exec wlsunset -l 41.90 -L 12.49

# startup apps
exec fcitx5

# wallpaper
# output * bg $HOME/Downloads/nord_minimal_cat.png fill

# autotiling
exec_always autotiling

###########
# hotkeys #
###########

# mod key (Mod1 = Alt)
set $mod Mod4

# open terminal
bindsym $mod+Return exec alacritty

# open firefox
bindsym $mod+F exec firefox

# open file manager
bindsym $mod+E exec thunar

# open calculator
bindsym $mod+Shift+C exec qalculate-gtk

# lock screen
bindsym $mod+Alt+L exec swaylock

# start application launcher
bindsym $mod+R exec rofi -show drun

# move and resize windows with mouse buttons
floating_modifier $mod normal

# reload the configuration file
bindsym $mod+Shift+R reload

# exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+E exec "swaymsg exit"

# laptop shortcuts
# F1, F2, F3
bindsym XF86AudioRaiseVolume exec pactl -- set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec pactl -- set-sink-volume 0 -5%
bindsym XF86AudioMute exec pactl -- set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

# F4, F5
bindsym XF86MonBrightnessUp exec brightnessctl set 5%+
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym Ctrl+XF86MonBrightnessUp exec brightnessctl set 2%+
bindsym Ctrl+XF86MonBrightnessDown exec brightnessctl set 2%-

# F6, F10, F12
# bindsym XF86TouchpadToggle
# bindsym XF86WebCam
# bindsym XF86Launch2

# Screenshot
bindsym Print exec grim -g "$(slurp)" - | wl-copy

#####################
# window management #
#####################

# kill focused window
bindsym $mod+Q kill

# move your focus around
bindsym $mod+H focus left
bindsym $mod+J focus down
bindsym $mod+K focus up
bindsym $mod+L focus right

# move the focused window with the same, but add Shift
bindsym $mod+Shift+H move left
bindsym $mod+Shift+J move down
bindsym $mod+Shift+K move up
bindsym $mod+Shift+L move right

# make the current focus fullscreen
bindsym $mod+Shift+F fullscreen

# change window dimensions with keyboard
bindsym $mod+Ctrl+H resize shrink width 40px
bindsym $mod+Ctrl+J resize grow height 40px
bindsym $mod+Ctrl+K resize shrink height 40px
bindsym $mod+Ctrl+L resize grow width 40px

# programs that should start in floating mode
for_window [app_id="qalculate-gtk"] floating enable
for_window [app_id="thunar"] floating enable
for_window [app_id="lutris"] floating enable, resize set 1280 720
for_window [class="steam"] floating enable
for_window [class="dolphin-emu"] floating enable, resize set 960 720
for_window [class="rars-Launch"] floating enable
for_window [class="YouTube Music"] floating enable, resize set 1280 720

# hide title bar and change border color
default_border pixel 2
client.focused "#d8dee9" "#d8dee9" "#ffffff" "#d8dee9"

#######################
# input configuration #
#######################

# keyboard
input type:keyboard {
  xkb_layout it
  xkb_options ctrl:nocaps
  repeat_rate 40
  repeat_delay 330

  # only because my mouse is detected as a keyboard for some reason
  accel_profile "flat"
  pointer_accel 0
}

# touchpad
input "1267:12737:ASUE120C:00_04F3:31C1_Touchpad" {
  dwt enabled
  tap enabled
  natural_scroll enabled
  middle_emulation enabled
  scroll_factor 0.5
}

##############
# workspaces #
##############

# switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

###############
# scratchpads #
###############

# move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# show the next scratchpad window or hide the focused scratchpad window.
bindsym $mod+minus scratchpad show

##############
# status bar #
##############

bar {
  position top

  swaybar_command waybar

# When the status_command prints a new line to stdout, swaybar updates.
# The default just shows the current date and time.
  status_command while date +'%Y-%m-%d %I:%M:%S %p'; do sleep 1; done

  colors {
    statusline #ffffff
    background #323232
    inactive_workspace #32323200 #32323200 #5c5c5c
  }
}

include /etc/sway/config.d/*
